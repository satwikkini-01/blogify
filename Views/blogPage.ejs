<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./Partials/head") %>
    <title>Blog Page</title>
  </head>
  <body>
    <%- include("./Partials/nav") %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <h4>Author: <%= blog.createdBy.fullName %></h4>
      <p><%= blog.coverImageURL %></p>
      <pre><%= blog.body %></pre>
    </div>
    <div class="container">
      <h4>Comments (<%= comments.length %>)</h4>
      <% if (locals.user) { %>
      <div class="container">
        <form action="/blog/<%= blog.id %>/comments" method="post">
          <div class="form-floating mb-3">
            <textarea
              class="form-control"
              id="content"
              name="content"
              style="height: 100px"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-sm btn-primary">Add</button>
        </form>
      </div>
      <% } %>
      <div class="container">
        <% comments.forEach(comment => { %>
        <h4><%= comment.createdBy.fullName %></h4>
        <pre><%= comment.content %></pre>
        <% }) %>
      </div>
    </div>
    <%- include ("./Partials/script") %>
  </body>
</html>
